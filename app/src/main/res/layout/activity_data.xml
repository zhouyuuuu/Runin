<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.domencai.runin.activity.DataActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/runin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_gravity="center"
            android:layout_toRightOf="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RunIn"
            android:textSize="28sp"
            android:textStyle="italic|bold"
            android:textColor="#505050"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="周"
            android:gravity="center"
            android:textColor="#aaaaaa"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#aaaaaa"
            android:layout_height="match_parent" />
        <TextView
            android:text="月"
            android:gravity="center"
            android:textColor="#aaaaaa"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:background="#aaaaaa"
            android:layout_height="match_parent" />
        <TextView
            android:text="年"
            android:gravity="center"
            android:textColor="#aaaaaa"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:paddingLeft="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="1000"
                android:textColor="#000000"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="公里"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:text="共跑步"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:text="20次"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#fbfbfb"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f4f4f4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f0f0f0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#eaeaea"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="60dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="10000"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="本月路程(公里)"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="60dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="809080"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="上月路程(公里)"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="60dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="10900"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="本月卡路里(千卡)"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="60dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="102300"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="上月卡路里(千卡)"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="60dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="123.23"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="本月时间(分钟)"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="60dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="125.23"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="上月时间(分钟)"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="60dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="78.23"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="本月配速(分钟/公里)"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="60dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="72.28"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="上月配速(分钟/公里)"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="数据来源于Runin"
            android:textSize="10sp"
            android:textColor="#bbbbbb"/>
    </LinearLayout>


</LinearLayout>
